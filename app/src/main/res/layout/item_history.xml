<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="186dp">

        <TextView
            android:id="@+id/tvAddressItem"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginEnd="34dp"
            android:gravity="center"
            android:text="Address"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.685" />

        <TextView
            android:id="@+id/tvTimeItem"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginEnd="104dp"
            android:gravity="center"
            android:text="Time"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.506" />

        <TextView
            android:id="@+id/tvVaccineNameItem"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:elegantTextHeight="false"
            android:shadowColor="#131212"
            android:text="Vaccine Name"
            android:textAlignment="center"
            android:textColor="#0E2AC3"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.238"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.102" />

        <TextView
            android:id="@+id/tvDateItem"
            android:layout_width="120dp"
            android:layout_height="28dp"
            android:layout_marginStart="56dp"
            android:gravity="center"
            android:text="Date"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvVaccineNameItem"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.291" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="108dp"
            android:layout_height="81dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvAddressItem"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.615"
            app:srcCompat="@drawable/img_vaccine" />

        <TextView
            android:id="@+id/tvCurrentDose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Current Dose"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tvAddressItem"
            app:layout_constraintStart_toStartOf="@+id/tvAddressItem"
            app:layout_constraintTop_toBottomOf="@+id/tvAddressItem"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvDoctor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Doctor"
            android:textColor="#000000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tvCurrentDose"
            app:layout_constraintStart_toStartOf="@+id/tvCurrentDose"
            app:layout_constraintTop_toBottomOf="@+id/tvCurrentDose"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>